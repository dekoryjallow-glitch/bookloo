{
    "hosting": {
        "public": "public",
        "rewrites": [
            {
                "source": "/api/**",
                "run": {
                    "serviceId": "bookloo-backend",
                    "region": "europe-west1"
                }
            },
            {
                "source": "**",
                "run": {
                    "serviceId": "bookloo",
                    "region": "europe-west1"
                }
            }
        ],
        "headers": [
            {
                "source": "/**",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache, no-store, must-revalidate"
                    }
                ]
            },
            {
                "source": "/favicon.*",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache, no-store, must-revalidate"
                    }
                ]
            }
        ]
    }
}